{
    "manifest_version": 3,
    "name": "AI Reviewer Extension",
    "version": "1.0",
    "description": "This AI assistant summarizes the content of the active tab.",
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "action": {
        "default_title": "AI Reviewer Extension",
        "default_icon": {
            "16": "icon.png",
            "48": "icon.png",
            "128": "icon.png"
        },
        "default_popup": "popup.html"
    },
    "permissions": ["activeTab", "scripting"]
}
